<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.zawzaww.padc.mmnewskotlin.fragments.HighlightFragment">

    <ImageView
        android:id="@+id/ivHighlight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/img_news_placeholder" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A000" />

    <TextView
        android:id="@+id/tvNewsHeadTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium_2"
        android:layout_marginRight="@dimen/margin_medium_2"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:text="@string/highlight_news_head"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_heading_1x" />

</RelativeLayout>
