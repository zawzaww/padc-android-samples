<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_newspub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_medium"
        android:text="U Thant House's Press"
        android:textColor="@color/primaryText"
        android:textSize="@dimen/text_regular" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_newspub_title"
        android:layout_margin="@dimen/margin_small"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_news_brief"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_weight="2"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.05"
            android:maxLines="5"
            android:text="@string/news_brief"
            android:textColor="@color/primaryText" />

        <ImageView
            android:id="@+id/iv_news_heroimage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/news_header_image" />

    </LinearLayout>

</RelativeLayout>