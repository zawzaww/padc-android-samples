<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_medium"
    android:layout_marginRight="@dimen/margin_medium"
    android:layout_marginTop="@dimen/margin_medium"
    app:cardElevation="@dimen/card_elevation_size">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_newspub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_medium"
            android:textColor="@color/primaryText"
            android:textSize="@dimen/text_regular"
            tools:text="U Thant House's Press" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_newspub_title"
            android:layout_margin="@dimen/margin_small"
            android:orientation="horizontal">

            <org.mmtextview.components.MMTextView
                android:id="@+id/tv_news_brief"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_weight="2"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.05"
                android:maxLines="5"
                android:textColor="@color/primaryText"
                tools:text="@string/news_brief" />

            <ImageView
                android:id="@+id/iv_news_heroimage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:src="@drawable/news_header_image" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
