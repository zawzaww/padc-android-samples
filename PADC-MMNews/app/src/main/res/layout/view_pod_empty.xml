<?xml version="1.0" encoding="utf-8"?>
<com.zawzaw.padcmyanmar.viewpods.EmptyViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_empty_image"
        android:layout_width="159dp"
        android:layout_height="159dp"
        android:layout_centerInParent="true"
        tools:src="@drawable/empty_data_placeholder" />

    <TextView
        android:id="@+id/tv_empty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_empty_image"
        android:layout_centerHorizontal="true"
        tools:text="@string/empty_message"
        android:textSize="@dimen/margin_medium_3" />

</com.zawzaw.padcmyanmar.viewpods.EmptyViewPod>
